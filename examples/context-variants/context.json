{
  "service_name": "checkout-service",
  "description": "Handles user checkout and payment processing",
  "metrics": [
    {
      "name": "http_request_duration_seconds",
      "type": "latency",
      "source": "prometheus"
    },
    {
      "name": "http_errors_total",
      "type": "error",
      "source": "prometheus"
    },
    {
      "name": "db_query_duration",
      "type": "latency",
      "source": "datadog"
    },
    {
      "name": "kafka_consumer_lag",
      "type": "queue",
      "source": "prometheus"
    },
    {
      "name": "http_requests_total",
      "type": "throughput",
      "source": "prometheus"
    },
    {
      "name": "api_throughput",
      "type": "throughput",
      "source": "newrelic"
    },
    {
      "name": "system_load",
      "type": "utilization",
      "source": "grafana"
    },
    {
      "name": "memory_usage_percent",
      "type": "utilization",
      "source": "datadog"
    }
  ]
}