```rego
package main

import (
	"fmt"
	"github.com/openpolicyagent/opa/v1/parser"
	"github.com/openpolicyagent/opa/v1/semantics"
)

rule "Ensure S3 Buckets Have Encryption Enabled" {
	// Description
	description = "Ensure all S3 buckets have encryption enabled"
	// SOC2 Compliance
	soc2 = "S3BucketEncryption"
	// ISO27001 Compliance
	iso27001 = "ISO27001_A.14.2.2"

	// Constraints
	if !semantics.IsEnabled(bucket) {
		deny("S3 bucket encryption is not enabled")
	}
}
